<div class="container">
    <div class="row">
        <div class="col-12 col-md-10 mx-auto">
            <h1 class="mb-1 restaurant-show-title">{{todo.name}}</h1>

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-utensils pr-2"></i>
                    類別：
                </span>
                {{todo.category}}
            </p>

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-map-marker-alt pr-2"></i>
                    地址：
                </span>
                {{todo.location}}
                <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
                    <i class="fas fa-location-arrow pr-2 fa-xs">在google map中查看</i>
                </a>
            </p>

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-mobile-alt pr-2"></i>
                    電話：
                </span>
                {{todo.phone}}
            </p>

            <p class="mb-5">
                {{todo.description}}
            </p>

            <img class="rounded mx-auto d-block mb-4 w-100" src="{{todo.image}}" alt="{{todo.name}}"
                style="max-width: 600px;">

            <div class="buttons">
                <a href="/todos/{{ todo._id }}/edit" class="btn btn-secondary mb-4" type="button">edit</a>
                <a href="/" class="btn btn-secondary mb-4" type="button">返回</a>
            </div>
        </div>
    </div>
</div>

