<div class="container">
    <div class="row">
        <div class="col-12 col-md-10 mx-auto" style="color:orange">
            <h1 class="mb-1 restaurant-show-title">{{todo.name}}</h1>
            <p class="mb-1">
                <span class="text-secondary" >
                    <i class="fas fa-utensils pr-2" style="color:orange"> 類別：</i>
                   
                </span>
                {{todo.category}}
            </p>

            <p class="mb-1">
                <span class="text-secondary">
                   <i class="fas fa-utensils pr-2" style="color:orange"> 地址：</i>
                </span>
                {{todo.location}}
                <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
                    <i class="fas fa-location-arrow pr-2 fa-xs" style="color:orange">在google map中查看</i>
                </a>
            </p>

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-mobile-alt pr-2" style="color:orange"> 電話：</i>
                   
                </span>
                {{todo.phone}}
            </p>

            <p class="mb-5">
                {{todo.description}}
            </p>
            
            <img class="rounded mx-auto d-block mb-4 w-100" src="{{todo.image}}" alt="{{todo.name}}"
                style="max-width: 600px;">

            <div class="buttons">
                <a href="/todos/{{ todo._id }}/edit" class="btn btn-secondary mb-4" type="button" style="color:#FF1C1C">edit</a>
                <form action="/todos/{{ todo._id }}/delete" method="POST" style="display: inline;">
                    <button  class="btn btn-secondary mb-4" type="submit" style="color:#FF1C1C">delete</button>
                </form>
                <a href="/" class="btn btn-secondary mb-4" type="button" style="color:#FF1C1C">返回</a>
            </div>
        </div>
    </div>
</div>